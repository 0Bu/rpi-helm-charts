{
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["homebridge/homebridge"],
      "versioning": "loose"
    },
    {
      "matchFileNames": ["charts/**"],
      "bumpVersions": [
        {
          "filePatterns": ["{{packageFileDir}}/Chart.yaml"],
          "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
          "bumpType": "patch"
        }
      ]
    }
  ]
}
